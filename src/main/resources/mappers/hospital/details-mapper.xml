    <insert id="addDetails" parameterType="java.util.List">
            insert all into details
        <selectKey keyProperty="detailsSerial" resultType="_int" order="BEFORE">
            select seq_huiren.nextval from dual
        </selectKey>
        <foreach collection="detail" item="p" index="i" separator="">
            <if test="i!=detail.size()-1">
                into details
                        (details_serial,drug_name,details_drip,datails_dosage,daralis_usage,daralis_time,advice_id,daralis_dstate,daralis_disable,daralis_start,daralis_price,daralis_number,standard_use,daralis_mark,register_id,details_money)
                values(#{detailsSerial},#{p.drugName},#{p.detailsDrip},#{p.datailsDosage},#{p.daralisUsage},#{p.daralisTime},#{p.adviceId},#{p.daralisDstate},#{p.daralisDisable},#{p.daralisStart},#{p.daralisPrice},#{p.daralisNumber},#{p.standardUse},#{p.daralisMark},#{p.registerId},#{p.detailsMoney})
            </if>
            <if test="i==detail.size()-1">
                select #{detailsSerial},#{p.drugName},#{p.detailsDrip},#{p.datailsDosage},#{p.daralisUsage},#{p.daralisTime},#{p.adviceId},#{p.daralisDstate},#{p.daralisDisable},#{p.daralisStart},#{p.daralisPrice},#{p.daralisNumber},
               #{p.standardUse},#{p.daralisMark},#{p.registerId},#{p.detailsMoney} from dual
            </if>
        </foreach>
    </insert>

