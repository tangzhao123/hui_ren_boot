<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.gson.hui_ren_boot.model.mapper.hospital.HosptialMapper">

    <!-- 查询病人信息-->
    <select id="allHosptial" resultType="Hospital">
        select * from HOSPITAL
        <where>
            <if test="hospitalCause != null and '' != hospitalCause">
                or HOSPITAL_CAUSE like '%${hospitalCause}%'
            </if>
            <if test="hospitalName != null and '' != hospitalName">
                or HOSPITAL_NAME like '%${hospitalName}%'
            </if>
            <if test="hospitalSite != null and '' != hospitalSite">
                or HOSPITAL_SITE like '%${hospitalSite}%'
            </if>
            <if test="hospitalCard != null and '' != hospitalCard">
                or HOSPITAL_CARD like '%${hospitalCard}%'
            </if>
            <if test="hospitalDoctor != null and '' != hospitalDoctor">
                or HOSPITAL_DOCTOR like '%${hospitalDoctor}%'
            </if>
        </where>
    </select>
</mapper>